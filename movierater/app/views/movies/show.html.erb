<% title @movie.title %>
<h2><%=link_to(h(@movie.title), movie_path(@movie.id)) %></h2>
<p><%= @movie.thoughts %></p>
  <% if @commets %>
  <h3>Comments</h3>
 
  <% for c in @commets do %>
    <p><strong><%=h(c.author) %></strong>: <%=h c.text %>
  <% end %>
    <%= will_paginate @commets %>
  <% end %>

 <h3>Post Your Comment</h3>
<%= form_for([@movie, Commet.new]) do |form| %>
  <p><%= form.label :author %></p>
  <p><%= form.text_field :author %></p>
 
  <p><%= form.label :text, 'Comment' %></p>
  <p><%= form.text_area :text %></p>
 
  <%= form.submit 'Save' %>
<% end %>